# Copy this file to terraform.tfvars and fill in your values
# cp terraform.tfvars.example terraform.tfvars

# Proxmox API Configuration
proxmox_api_url          = "https://proxmox.sdconrox.com/api2/json"
proxmox_api_token_id     = "terraform@pam!terraform-token"
proxmox_api_token_secret = "your-token-secret-here"
proxmox_node             = "proxmox"
proxmox_tls_insecure     = false  # Set to true if using self-signed certs

# VM Configuration
vm_hostname    = "k8s-master"
vm_id          = null  # Leave null for auto-increment
vm_cores       = 8
vm_sockets     = 2
vm_memory      = 32768  # MB
vm_disk_size   = "256"
vm_storage_pool = "local-zfs"

# Network Configuration
vm_network_bridge = "vmbr0"

# Cloud-init Template
vm_template_name = "ubuntu-22.04-cloudinit"  # Update to match your template

# User Configuration
vm_user          = "sdconrox"
